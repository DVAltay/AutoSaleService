@model IEnumerable<AutoServiceSale.Entities.Concrete.Service>

@{
    ViewData["Title"] = "Services";
}

<h1>Services</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">+ New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InServiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OutServiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutoTrouble)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServicePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoneProcess)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InWarranty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutoNumberPlate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BanType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BanNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InServiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutServiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutoTrouble)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServicePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoneProcess)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InWarranty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutoNumberPlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BanType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BanNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
